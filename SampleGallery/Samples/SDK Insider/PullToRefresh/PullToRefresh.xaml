<local:SamplePage
    x:Class="CompositionSampleGallery.PullToRefresh"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CompositionSampleGallery"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:CompositionSampleGallery.Shared"
    mc:Ignorable="d"
    Loaded ="Page_Loaded"

    >
    <Grid x:Name ="Root" Background="White"   SizeChanged="Grid_SizeChanged" >
       
        <Grid Height="500" Canvas.Top="100" x:Name="ContentPanel" >
            <Rectangle Width="400" Height="100" Fill="Blue" Stroke="Red" 
                Canvas.Top="-100" Canvas.Left="20" StrokeThickness="3" />
            <ListView x:Name="ThumbnailList" Background="Aqua"
                      Grid.Row="2"
                      Grid.ColumnSpan="2"
                      MaxWidth="400"
                      Height="150"
                      Canvas.Top="210" Canvas.Left="20"  ScrollViewer.VerticalScrollMode="Enabled" ScrollViewer.IsVerticalScrollChainingEnabled="True" >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="data:Thumbnail">
                        <RelativePanel Width="320" Height="40">
                            <TextBlock Text="{x:Bind Name}"
                                       Style="{ThemeResource TitleTextBlockStyle}"
                                       Foreground="Black" >
                            </TextBlock>
                        </RelativePanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</local:SamplePage>
